<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Registrar</from-outcome>
            <to-view-id>/registrarInvestigador.xhtml</to-view-id>
        </navigation-case>     
        
        <navigation-case>
            <from-outcome>investigador</from-outcome>
            <to-view-id>/pantallaPrincipalInvestigador.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/registrarInvestigador.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ingresar</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/indexAdmin.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/pantallaPrincipalAdministrador.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/administradorTablaInvestigadores.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>confirmar</from-outcome>
            <to-view-id>/confirmarActualizarPantalla.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/confirmarActualizarPantalla.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>actualizar</from-outcome>
            <to-view-id>/administradorTablaInvestigadores.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/confirmarCreacionUsuario.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ingresar</from-outcome>
            <to-view-id>/inicio.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/registrarInvestigador.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>activar</from-outcome>
            <to-view-id>/confirmarCreacionUsuario.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>


</faces-config>
